{{#> layout }}
  {{#*inline "description" }}
    <meta name="description" content="{{page.title}} - {{config.author}}">
  {{/inline}}

  {{#*inline "site_title" }}
    {{page.title}} | {{config.title}}
  {{/inline}}

  {{#*inline "container" }}
    <section class="page-content">
      {{{page.content}}}
    </section>
  {{/inline}}
  
  {{#*inline "pagination" }}
  {{/inline}}
  
  {{#*inline "copyright" }}
    {{> copyright }}
  {{/inline}}
{{/layout}}
